{
  "name": "treemap-chart",
  "version": "1.3.1",
  "description": "A treemap interactive chart web component for visualizing hierarchical data",
  "license": "MIT",
  "unpkg": "dist/treemap-chart.min.js",
  "jsdelivr": "dist/treemap-chart.min.js",
  "main": "dist/treemap-chart.common.js",
  "module": "dist/treemap-chart.module.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/treemap-chart.git"
  },
  "homepage": "https://github.com/vasturiano/treemap-chart",
  "keywords": [
    "treemap",
    "chart",
    "data-visualization",
    "d3",
    "hierarchical",
    "svg"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "bugs": {
    "url": "https://github.com/vasturiano/treemap-chart/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "dev": "rollup -c -w",
    "minify": "terser dist/treemap-chart.js -o dist/treemap-chart.min.js -c -m --comments '/Version/'",
    "build-module": "rollup -c rollup.config.module.js",
    "prepare": "npm run build && npm run minify && npm run build-module"
  },
  "dependencies": {
    "accessor-fn": "^1.2.2",
    "d3-hierarchy": "^1.1.9",
    "d3-interpolate": "^1.4.0",
    "d3-scale": "^3.2.1",
    "d3-selection": "^1.4.1",
    "d3-transition": "^1.3.2",
    "d3-zoomable": "^1.1.2",
    "kapsule": "^1.12.2",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "postcss-nested": "^4.2.1",
    "postcss-simple-vars": "^5.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.6",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-postcss": "^2.4.1",
    "terser": "^4.6.6"
  }
}
